<div class="list-header" style="background-image: linear-gradient(rgba(0,0,0,0.6),rgba(0,0,0,0.6)), url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba)">
  <div class="container">
    <h1>Create a new list</h1>
  </div>
</div>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-6">
      <div class="bg-dark p-4 rounded shadow">
        <%= simple_form_for @list do |f| %>
          <%= f.input :name,
              placeholder: "Enter list name...",
              input_html: {
                class: 'bg-dark text-white',
                style: 'color: white !important;'
              },
              label_html: { class: 'text-white' } %>
          <%= f.input :photo,
              as: :file,
              label_html: { class: 'text-white' },
              input_html: { class: 'form-control bg-dark text-white' } %>
          <div class="d-flex justify-content-between align-items-center mt-4">
            <%= link_to lists_path, class: 'btn btn-outline-light' do %>
              <i class="fas fa-arrow-left me-2"></i>Back
            <% end %>
            <%= f.submit 'Create List', class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
